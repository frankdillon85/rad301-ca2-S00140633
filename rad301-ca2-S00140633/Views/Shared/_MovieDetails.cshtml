@model rad301_ca2_S00140633.Models.Movie

<div class="col-md-4">
    <h4 style="color:teal" class="text-center">Details Of @Model.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cert)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FilmCert)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating) Stars
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

    </dl>

        <div class="col-md-offset-4">
            <button onclick="EditMovie(@Model.MovieId,@Model.Rating)" class="btn btn-xs btn-info">Edit</button> |
            @Html.ActionLink("Back to Movies", "Index",null ,new { @class = "btn btn-danger btn-xs" })
        </div>

</div>

<div id="ActorsDiv" class="col-md-4">
    @Html.Action("ActorsbyId", new { id = Model.MovieId })
</div>
<div class="col-md-4" id="piechart">
    @Html.Action("showPieChart", new { id = Model.MovieId })
</div>
